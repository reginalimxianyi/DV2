{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 380,
    "height": 300,
    "background" : "rgb(245, 236, 222)",
    "data": {
      "url": "https://raw.githubusercontent.com/reginalimxianyi/DV2/main/co2_filtered_countries.csv"
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2000,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2018,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "fuelType",
        "value": "coal_co2",
        "bind": {
          "input": "select",
          "options": [
            "coal_co2", 
            "gas_co2", 
            "oil_co2", 
            "cement_co2", 
            "flaring_co2"
          ],
          "labels": [
            "Coal CO2", 
            "Gas CO2", 
            "Oil CO2", 
            "Cement CO2", 
            "Flaring CO2"
          ],
          "name": "Fuel Type: "
        }
      }
    ],
    "transform": [

      {
        "calculate": "datum[fuelType]",
        "as": "selectedFuelCO2"
      },
      {
        "filter": "datum.year == Year_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "co2",
        "type": "quantitative",
        "title": "Total CO2 Emission (in million tonnes)"
      },
      "y": {
        "field": "selectedFuelCO2",
        "type": "quantitative",
        "title": "Emission from Selected Fuel (in million tonnes)"
      },
      "color": {
        "field": "country", 
        "type": "nominal", 
        "scale": {
            "domain": [
                "Australia",
                "Malaysia",
                "Italy",
                "Indonesia",
                "India"
            ],
            "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
            ]
        }
      },
      "size": {
        "field": "population",
        "type": "quantitative",
        "scale": {
            "type": "threshold",
            "domain": [
                1000000, 
                10000000, 
                50000000, 
                100000000, 
                500000000
            ],
            "range": [
                10, 
                50, 
                150, 
                200, 
                300, 
                400
            ]
          },
          "legend": {"format": ".1s"}
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "year", "type": "quantitative", "title": "Year"},
        {"field": "selectedFuelCO2", "type": "quantitative", "title": "Emissions from Selected Fuel"}
      ]
    },
    "mark": "circle"
  }