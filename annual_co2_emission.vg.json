{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/reginalimxianyi/DV2/main/co2_filtered_countries.csv"},
    "params": [
        {
            "name": "Country_selection",
            "bind": {
            "input": "select",
            "options": [
                null,
                "Australia",
                "Malaysia",
                "Italy",
                "Indonesia",
                "India"
            ],
            "labels":[
                "Show All",
                "Australia",
                "Malaysia",
                "Italy",
                "Indonesia",
                "India"
            ],
            "name": "Country: "
            }
        }
        ],
    "layer": [
        {
        "transform": [
            {
                "filter": "Country_selection == null || datum.country == Country_selection"
            }
        ],
        "mark": {
            "type": "line"
        },
        "encoding": {
            "x": {
                "field": "year", 
                "title": "Year", 
                "type":"ordinal"
            },
            "y": {
                "field": "co2", 
                "title": "CO2 Emission", 
                "type":"quantitative", 
                "scale":{"domain":[0, 2800]}
            },
            "color": {
                "field": "country", 
                "type": "nominal", 
                "scale": {
                    "domain": [
                        "Australia",
                        "Malaysia",
                        "Italy",
                        "Indonesia",
                        "India"
                    ],
                    "range": [
                        "#e41a1c",
                        "#984ea3",
                        "#ff7f00",
                        "#a6cee3",
                        "#377eb8",
                        "#a65628"
                    ]
                }
            },
            "tooltip": [
                {"field": "year", "type": "ordinal", "title": "Year"},
                {"field": "country", "type": "nominal", "title": "Country"},
                {"field": "co2", "type": "quantitative", "title": "co2"}
            ]
        }
        }
    ]
}


  
  