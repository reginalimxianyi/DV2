{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 300,
    "background" : "rgb(245, 236, 222)",
    "data": { "url": "https://raw.githubusercontent.com/reginalimxianyi/DV2/main/co2_filtered_countries.csv" },
    "params": [
      {
        "name": "Country_selection",
        "value": "Australia",
        "bind": {
          "input": "select",
          "options": [
            "Australia", 
            "Malaysia", 
            "Italy", 
            "Indonesia", 
            "India"
        ],
          "labels": [
            "Australia", 
            "Malaysia", 
            "Italy", 
            "Indonesia", 
            "India"
        ],
          "name": "Country: "
        }
      }
    ],
    "transform": [
      {
        "fold": [
            "cement", 
            "coal", 
            "flaring", 
            "gas", 
            "oil"
        ],
        "as": [
            "Fuel", 
            "co2"
        ]
      },
      {
        "filter": "Country_selection == null || datum.country == Country_selection"
      }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "year",
        "title": "Year",
        "type": "ordinal"
      },
      "y": {
        "field": "co2",
        "title": "CO2 Emission (in million tonnes)",
        "type": "quantitative"
      },
      "color": {
        "field": "Fuel",
        "type": "nominal",
        "scale": {
          "domain": [
            "cement", 
            "coal", 
            "flaring", 
            "gas", 
            "oil"
        ],
          "range": [
            "#e41a1c", 
            "#984ea3", 
            "#ff7f00", 
            "#a6cee3", 
            "#377eb8"
        ]
        }
      },
      "detail": {
        "field": "country",
        "type": "nominal"
      },
      "tooltip": [
        { "field": "year", "type": "ordinal", "title": "Year" },
        { "field": "country", "type": "nominal", "title": "Country" },
        { "field": "Fuel", "type": "nominal", "title": "Fuel Type" },
        { "field": "co2", "type": "quantitative", "title": "CO2 Emissions" }
      ]
    }
  }
